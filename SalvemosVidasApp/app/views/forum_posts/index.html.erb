<p id="notice"><%= notice %></p>

<div class="container" style="margin-top: -20px; width: 95%; height: 90%;">
  <div class="panel">
    <div class="panel-body" style="background-color: #fafafa;">
      <div class="col-container">
        <div class="col">
          <h2>Foro</h2>
        </div>
        <div class="col">
          <%= link_to '+', new_forum_post_path, class:"btn"%>
        </div>
      </div>

      <hr>

      <div style="background: #fff; width: 100%;padding-left: 10px; padding-top: 5px; padding-bottom: 10px;">
        
        <% @forum_posts.each do |forum_post| %>
          <h2><%= forum_post.title %></h2>
          <div align="center">
            <div class="col-container-foro">
              <div class="col-foro" style="width: 80%; padding-left: 10px;  padding-right: 10px;">
                <p"><%= forum_post.datail %></p>
              </div>
              <div class="col-foro" style="width: 20%;">
                <p><%= forum_post.user.username %></p>
                <p><%= forum_post.created_at %></p>
                <%= link_to 'Ver', forum_post , class:"btn", style:"width: 100px;"%>
              </div>
            </div>
          </div>
          <hr>
        <% end %>

      </div>

    </div>
  </div>
</div>

