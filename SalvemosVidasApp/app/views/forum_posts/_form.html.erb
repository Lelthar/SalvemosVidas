<%= form_with(model: forum_post, local: true) do |form| %>
  <% if forum_post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(forum_post.errors.count, "error") %> prohibited this forum_post from being saved:</h2>

      <ul>
      <% forum_post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-horizontal">
    <div class="form-group">
      <%= form.label :Titulo, class:"control-label col-sm-2"%>
      <div class="col-sm-10">
        <%= form.text_field :title, class:"form-control",placeholder:"Ingrese el dato..." %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :Detalles, class:"control-label col-sm-2"%>
      <div class="col-sm-10">
        <%= form.text_area :datail, class:"form-control", rows:5,placeholder:"Ingrese el dato..." %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :Categoria, class:"control-label col-sm-2"%>
      <div class="col-sm-10">
        <select class="form-control" name="forum_post[category]" id="lesson_category">
            <option value="cortadas">cortadas</option>
            <option value="accidente_quimico">accidente_quimico</option>
            <option value="quemaduras">quemaduras</option>
            <option value="envenenamiento">envenenamiento</option>
            <option value="afectacion_sentido">afectacion_sentido</option>
            <option value="accidente">accidente</option>
            <option value="prevencion">prevencion</option>
        </select>
      </div>
    </div>

    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <%= form.submit "Agregar Post" , class:"btn"%>
      </div>
    </div>
<% end %>
