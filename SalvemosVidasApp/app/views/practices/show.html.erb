<p id="notice"><%= notice %></p>

<div class="container bg-container">
	<h1 class="color-titulo"> <%= @practice.title %> </h1>
	<p class="col-sm-10 texto-descripcion"> <%= @practice.description %> </p>
	<p class="col-sm-2 texto-descripcion text-center">Categoría: <%= @practice.category %> </p>
	<p>Lección: <%= @practice.lesson.name %> </p>

	<hr class="separador col-sm-offset-1 col-sm-9">

	<% @practice.questions.each do |question| %>
		
		<div class="row col-sm-offset-1">
	      <div class="field row">
	      	<label class="color-titulo label-question col-sm-12"><%= question.description %></label>
	      </div>

	      <div class="row">
	      	  <div class="field col-sm-offset-1 col-sm-9 question-option">
		      	<%= radio_button_tag question.id, question.correct, false, class:"col-sm-offset-2" %>
		      	<%= label question.id, question.correct, :value => "false", class:"label-answer" %>
		      </div>
	      </div>

	      <div class="row">
	      	<div class="field col-sm-offset-1 col-sm-9 question-option">
		      	<%= radio_button_tag question.id, question.incorrect1, false, class:"col-sm-offset-2" %>
		      	<%= label question.id, question.incorrect1, :value => "false", class:"label-answer" %>
		    </div>
	      </div>

	      <div class="row">
	      	<div class="field col-sm-offset-1 col-sm-9 question-option">
		      	<%= radio_button_tag question.id, question.incorrect2, false, class:"col-sm-offset-2" %>
		      	<%= label question.id, question.incorrect2, :value => "false", class:"label-answer" %>
		    </div>
	      </div>

	      <div class="row">
	      	<div class="field col-sm-offset-1 col-sm-9 question-option">
		      	<%= radio_button_tag question.id, question.incorrect3, false, class:"col-sm-offset-2" %>
		      	<%= label question.id, question.incorrect3, :value => "false", class:"label-answer" %>
		    </div>
	      </div>
	    
	    </div>

	    <hr class="separador col-sm-offset-1 col-sm-9">
	<% end %>

	<div class="col-sm-12 text-center">
		<span class="btn"> Terminar </span>
	</div>

</div>
<p>
  <strong>Title:</strong>
  <%= @practice.title %>
</p>

<p>
  <strong>Category:</strong>
  <%= @practice.category %>
</p>

<p>
  <strong>Description:</strong>
  <%= @practice.description %>
</p>

<p>
  <strong>Lesson:</strong>
  <%= @practice.lesson %>
</p>

<%= link_to 'Edit', edit_practice_path(@practice) %> |
<%= link_to 'Back', practices_path %>
