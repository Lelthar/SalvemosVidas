    <label class="label-answer col-sm-offset-1 col-sm-7"><%= @question.correct %></label>
  </div>

  <div class="field">
    <label class="label-answer col-sm-offset-1 col-sm-7"><%= @question.incorrect1 %></label>
  </div>

  <div class="field">
