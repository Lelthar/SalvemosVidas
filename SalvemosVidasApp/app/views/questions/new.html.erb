
<div class="container bg-container">
	<h1 class="color-titulo"> Ahora agregue las preguntas </h1>

	<% @practice.questions.each do |question| %>
		<div class="row col-sm-offset-1">
	      <div class="field">
	      	<label class="color-titulo label-question col-sm-8"><%= question.description %></label>
	      </div>

	      <div class="field">
	      	<label class="label-answer col-sm-offset-1 col-sm-7"><%= question.correct %></label>
	      </div>

	      <div class="field">
	      	<label class="label-answer col-sm-offset-1 col-sm-7"><%= question.incorrect1 %></label>
	      </div>

	      <div class="field">
	      	<label class="label-answer col-sm-offset-1 col-sm-7"><%= question.incorrect2 %></label>
	      </div>

	      <div class="field">
	      	<label class="label-answer col-sm-offset-1 col-sm-7"><%= question.incorrect3 %></label>
	      </div>

	      <div class="col-sm-offset-7 col-sm-5">
	      	<%= link_to 'Editar', edit_question_path(question), class:"btn" %>
	      	<%= link_to 'Eliminar', question, method: :delete, data: { confirm: 'Â¿Seguro que desea eliminar la pregunta?' }, class:"btn" %>
	      </div>
	    </div>

	    <hr class="separador col-sm-offset-1 col-sm-9">
	<% end %>

	<div id="formPregunta">
		<%= render 'form', question: @question %>
	</div>
	
</div>

