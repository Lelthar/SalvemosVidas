<p id="notice"><%= notice %></p>
<%= form_with(model: @slide, local: true) do |form| %>
  <% if slide.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(slide.errors.count, "error") %> prohibited this slide from being saved:</h2>

      <ul>
      <% slide.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div id="formDatos" class="form-horizontal">
    <div id="formInput">

      <div class="form-group">
        <%= form.label :Titulo, class:"control-label col-sm-2"%>
        <div class="col-sm-8">
          <%= form.text_field :title, class:"form-control",placeholder:"Ingrese el dato..." %>
        </div>
      </div>

      <div class="container" align="center"> 
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
          <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
            <li data-target="#myCarousel" data-slide-to="4"></li>
          </ol>

          <!-- Wrapper for slides -->
          <div class="carousel-inner">
            <div class="item active">
              <%= image_tag("Diapositivas/tipo1.png", class:"img-responsive img-home") %>
              <div class="carousel-caption">
                <h3 style="background-color: rgba(255, 255, 255, 0.50); color: #000">Tipo 1</h3>
              </div>
            </div>

            <div class="item">
              <%= image_tag("Diapositivas/tipo2.png", class:"img-responsive img-home") %>
              <div class="carousel-caption">
                <h3 style="background-color: rgba(255, 255, 255, 0.50); color: #000">Tipo 2</h3>
              </div>
            </div>
          
            <div class="item">
              <%= image_tag("Diapositivas/tipo3.png", class:"img-responsive img-home") %>
              <div class="carousel-caption">
                <h3 style="background-color: rgba(255, 255, 255, 0.50); color: #000">Tipo 3</h3>
              </div>
            </div>
            <div class="item">
              <%= image_tag("Diapositivas/tipo4.png", class:"img-responsive img-home") %>
              <div class="carousel-caption">
                <h3 style="background-color: rgba(255, 255, 255, 0.50); color: #000">Tipo 4</h3>
              </div>
            </div>
            <div class="item">
              <%= image_tag("Diapositivas/tipo5.png", class:"img-responsive img-home") %>
              <div class="carousel-caption">
                <h3 style="background-color: rgba(255, 255, 255, 0.50); color: #000">Tipo 5</h3>
              </div>
            </div>
          </div>

          <!-- Left and right controls -->
          <a class="left carousel-control" href="#myCarousel" data-slide="prev" style="background: transparent;">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#myCarousel" data-slide="next" style="background: transparent;">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>

      <br>

      <div class="form-group">
        <%= form.label :tipo, class:"control-label col-sm-2"%>
        <div class="col-sm-8">
          <select class="form-control" name="slide[tipo]" id="slide_tipo" onchange="myFunction()" >
              <option value="tipo1">Tipo 1</option>
              <option value="tipo2">Tipo 2</option>
              <option value="tipo3">Tipo 3</option>
              <option value="tipo4">Tipo 4</option>
              <option value="tipo5">Tipo 5</option>
          </select>
          
        </div>
      </div>

      <div class="form-group" id="divParrafo1">
        <%= form.label :"Parrafo #1", class:"control-label col-sm-2"%>
        <div class="col-sm-8">
          <%= form.text_field :parrafo1, class:"form-control",placeholder:"Ingrese el dato..." %>
        </div>
      </div>

      <div class="form-group" id="divParrafo2" style="display: none;">
        <%= form.label :"Parrafo #2", class:"control-label col-sm-2"%>
        <div class="col-sm-8">
          <%= form.text_field :parrafo2, class:"form-control",placeholder:"Ingrese el dato..." %>
        </div>
      </div>

      <div class="form-group" id="divParrafo3" style="display: none;">
        <%= form.label :"Parrafo #3", class:"control-label col-sm-2"%>
        <div class="col-sm-8">
          <%= form.text_field :parrafo3, class:"form-control",placeholder:"Ingrese el dato..." %>
        </div>
      </div>

      <div class="form-group" id="divImagen1">
        <%= form.label :"Imagen #1", class:"control-label col-sm-2"%>
        <div class="col-sm-8">
          <%= form.file_field :image1, class:"form-control-file" %>
        </div>
      </div>

      <div class="form-group" id="divImagen2" style="display: none;">
        <%= form.label :"Imagen #2", class:"control-label col-sm-2"%>
        <div class="col-sm-8">
          <%= form.file_field :image2,class:"form-control-file" %>
        </div>
      </div>

      <div class="form-group" id="divImagen3" style="display: none;">
        <%= form.label :"Imagen #3", class:"control-label col-sm-2"%>
        <div class="col-sm-8">   
          <%= form.file_field :image3, class:"form-control-file" %>
        </div>
      </div>

      <div class="actions">
        <div class="col-sm-offset-2 col-sm-10">
          <%= form.submit "Guardar",name: "boton", class:"btn"%> <%= link_to "Terminar","/lessons/category/all",class:"btn"%>
        </div>
      </div>

    </div>   
  </div>
  
<% end %>
