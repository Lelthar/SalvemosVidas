<h2 align="center">Inicio Sesión</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  <div align="center">
    <div class="field">
      <div class="col-container">
        <div class="col" style="width: 34px;">
          <%= image_tag("email.png", class:"image-sign",style:"background: #3b6061;") %>
        </div>
        <div class="col" style="width: 220px;">
          <%= f.email_field :email,class:"form-control",style:"width: 220px;", autofocus: true, autocomplete: "email",placeholder:"Correo" %>
        </div>
      </div> 
    </div>
    <br>
    <div class="field">
      <div class="col-container">
        <div class="col" style="width: 34px;">
          <%= image_tag("pass.png", class:"image-sign",style:"background: #3b6061;") %>
        </div>
        <div class="col" style="width: 220px;">
          <%= f.password_field :password, class:"form-control",style:"width: 220px;", autocomplete: "current-password",placeholder:"Contraseña" %>
        </div>
      </div> 
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
    <br>
    <div class="actions">
      <%= f.submit "Ingresar", class:"btn" %>
    </div>
    
  </div>
  
<% end %>

<%= render "devise/shared/links" %>
