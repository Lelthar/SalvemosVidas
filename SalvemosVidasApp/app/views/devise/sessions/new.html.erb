<h2 align="center">Inicio Sesión</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  <div align="center">
    <div class="field">
      <%= image_tag("email.png", class:"image-navbar",style:"background: #3b6061;") %>
      <%= f.email_field :email,class:"form-control",style:"width: 220px;", autofocus: true, autocomplete: "email",placeholder:"Correo" %>
    </div>

    <div class="field">
      <%= image_tag("pass.png", class:"image-navbar",style:"background: #3b6061;") %>
      <%= f.password_field :password, class:"form-control",style:"width: 220px;", autocomplete: "current-password",placeholder:"Contraseña" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class:"btn" %>
    </div>
    
  </div>
  
<% end %>

<%= render "devise/shared/links" %>
